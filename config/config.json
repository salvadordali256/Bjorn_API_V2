{
    "application": {
      "name": "Bjorn HVAC Abbreviation Tool",
      "version": "1.0.0",
      "debug": false,
      "log_level": "INFO"
    },
    "abbreviation": {
      "target_length": 30,
      "use_ml": true,
      "fallback_to_rules": true,
      "min_confidence": 0.5
    },
    "models": {
      "default_model": "hybrid",
      "models_dir": "models",
      "training_data_dir": "data/training"
    },
    "files": {
      "upload_dir": "uploads",
      "max_file_size_mb": 10,
      "allowed_extensions": ["csv", "xlsx", "xls", "txt"]
    },
    "api": {
      "rate_limit": 100,
      "enable_cors": true,
      "allowed_origins": ["*"]
    },
    "ui": {
      "theme": "light",
      "enable_advanced_features": true,
      "show_debug_info": false
    }
  }